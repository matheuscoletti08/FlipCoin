<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlipCoin.Views.FlipCoinView"
             Title="FlipCoinView">
    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <Label
            Text="{Binding CaraCoroa}"
            Style="{StaticResource Headline}"
            FontSize="35"
            Padding="25"
            SemanticProperties.HeadingLevel="Level1" 
            />

            <Image 
               x:Name="CC"
               Source="https://www2.sorteador.com.br/_imgs/caracoroa/cara.jpg" 
               MaximumWidthRequest="300"
               MaximumHeightRequest="300"/>


            <Label
            x:Name="CoinLbl"
            FontAttributes="Bold"
            FontSize="50"
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level1"/>

            <Picker
            x:Name="CoinPck"
            Title="Escolha um lado"  SelectedItem="{Binding LadoSelecionado}">

                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>cara</x:String>
                        <x:String>coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
            x:Name="FlipCoinBtn"
            Text="GIRAR MOEDA" 
            Command="{Binding RollCommand}"
            BackgroundColor="Gray"
            HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>